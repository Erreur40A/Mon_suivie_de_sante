<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Définition du fond -->
    <solid android:color="#FFFFFF"/> <!-- Couleur blanche -->

    <!-- Définition de la bordure -->
    <stroke
        android:width="2dp"
        android:color="#000000"/> <!-- Couleur noire -->

    <!-- Optionnel : définir des coins arrondis -->
    <corners android:radius="10dp"/>

    <!-- Optionnel : définir des marges internes (padding) -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp"/>
</shape>
