<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_sommeil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SommeilActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginStart="1dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/logo_app"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_app" />

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/app_name"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/logo"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        layout="@layout/info_sommeil"
        android:id="@+id/info_sommeil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintBottom_toTopOf="@id/msg_motivation"
        android:layout_marginTop="30dp" />

    <include
        android:id="@+id/msg_motivation"
        layout="@layout/msg_motivation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25sp"
        app:layout_constraintEnd_toStartOf="@id/objectif_sommeil"
        app:layout_constraintStart_toEndOf="@id/info_sommeil"
        app:layout_constraintTop_toBottomOf="@id/info_sommeil" />

    <include
        android:id="@+id/objectif_sommeil"
        layout="@layout/objectif_sommeil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/img_motivation"
        app:layout_constraintTop_toBottomOf="@id/msg_motivation"
        android:layout_marginBottom="0dp" />

    <ImageView
        android:id="@+id/img_motivation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/image_de_motivation"
        app:layout_constraintBottom_toTopOf="@+id/include_toolbar"
        app:layout_constraintEnd_toStartOf="@id/include_toolbar"
        app:layout_constraintStart_toEndOf="@id/objectif_sommeil"
        app:srcCompat="@drawable/motivation" />

    <include
        android:id="@+id/include_toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>