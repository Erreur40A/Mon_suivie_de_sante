<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- ImageView for the health app icon -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/logo_app" />

            <!-- TextView for the title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mon suivi de Santé"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textAlignment="center"
                />


        </LinearLayout>

        <!-- ImageView for the hello icon -->
        <ImageView
            android:id="@+id/icon_hello"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:layout_marginTop="8dp"
            android:src="@drawable/hello" />

        <!-- TextView for the welcome message -->
        <TextView
            android:id="@+id/text_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/icon_hello"
            android:layout_marginTop="8dp"
            android:background="#FF00FF00"
            android:gravity="center"
            android:text="Bienvenue (prénom de l'utilisateur)"
            android:textSize="18sp" />

        <!-- LinearLayout for user information inputs -->
        <LinearLayout
            android:id="@+id/layout_user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_welcome"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Repeated EditText for user information -->
            <EditText
                android:id="@+id/edit_name"
                android:layout_width="match_parent"
                android:layout_marginTop="0dp"
                android:layout_height="wrap_content"
                android:hint="Nom" />

            <EditText
                android:id="@+id/edit_firstname"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:hint="Prénom"
                android:layout_marginTop="0dp" />

            <EditText
                android:id="@+id/edit_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Age"
                android:layout_marginTop="0dp" />

            <EditText
                android:id="@+id/edit_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Poids"
                android:layout_marginTop="0dp" />

            <EditText
                android:id="@+id/edit_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Taille"
                android:layout_marginTop="0dp" />

            <EditText
                android:id="@+id/edit_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Genre"
                android:layout_marginTop="0dp" />

            <EditText
                android:id="@+id/edit_person_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Type de personne : (sportif...)"
                android:layout_marginTop="0dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="4">

            <!-- LinearLayout pour le bouton MesInformations -->
            <LinearLayout
                android:layout_width="0dp"
                android:id="@+id/mes_info"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:alpha="0.4"
                    android:src="@drawable/icone_mes_informations"
                    android:contentDescription="Mes Informations" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mes informations"
                    android:textAlignment="center" />
            </LinearLayout>

            <!-- LinearLayout pour le bouton Pas -->
            <LinearLayout
                android:layout_width="0dp"
                android:id="@+id/pas"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:alpha="0.4"
                    android:src="@drawable/icone_pas"
                    android:contentDescription="Pas" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pas"
                    android:textAlignment="center" />
            </LinearLayout>

            <!-- LinearLayout pour le bouton Calories -->
            <LinearLayout
                android:layout_width="0dp"
                android:id="@+id/calories"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:alpha="0.4"
                    android:src="@drawable/icone_calories"
                    android:contentDescription="Calories" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calories"
                    android:textAlignment="center" />
            </LinearLayout>

            <!-- LinearLayout pour le bouton Sommeil -->
            <LinearLayout
                android:layout_width="0dp"
                android:id="@+id/sommeil"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:alpha="0.4"
                    android:src="@drawable/icone_sommeil"
                    android:contentDescription="Sommeil" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sommeil"
                    android:textAlignment="center" />
            </LinearLayout>

        </LinearLayout>







    </LinearLayout>

</RelativeLayout>